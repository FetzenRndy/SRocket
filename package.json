        "class-validator": "^0.8.4",
        "reflect-metadata": "^0.1.12",
        "socket.io": "^2.0.4",
        "socket.io-client": "^2.0.4",
        "socketio-wildcard": "^2.0.0",
        "typescript": "^2.7.2",
        "validator": "^9.4.1"
    },
    "devDependencies": {
        "@types/chai": "^4.1.2",
        "@types/lodash": "4.14.105",
        "@types/mocha": "2.2.48",
        "chai": "^4.1.2",
        "docsify": "^4.6.9",
        "docsify-cli": "^4.2.1",
        "gulp": "^3.9.1",
        "gulp-mocha": "^5.0.0",
