{
    "name": "srocket",
    "version": "1.1.0",
    "scripts": {
        "test": "gulp",
        "start": "nodemon --exec ts-node ./lib/test/App/TestApp.ts",
        "build:production": "tsc",
        "build:clean": "IF EXIST dist rmdir dist /s /q",
        "docs:serve": "docsify serve ./docs",
        "release:pre": "echo Make sure you are in the ROOT Directory of the project! && npm run build:clean && npm run build:production && npm run release:copy-package",
        "release:publish": "cd ./dist/src/ && npm publish && cd ../../ echo PUBLISHED!",
        "release:copy-package": "copy \"./package.json\" \"./dist/src/package.json\"",
        "release:justdoit": "npm run release:pre && npm run release:publish"
    },
    "main": "./index.js",
    "types": "./index.d.ts",
    "dependencies": {
        "@types/node": "^9.4.6",
        "@types/socket.io": "^1.4.31",
