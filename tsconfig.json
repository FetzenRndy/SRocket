{
	"compilerOptions": {
		"target": "es2015",
		"outDir": "./dist",
		"module": "commonjs",
		"declaration": true,
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"strictPropertyInitialization": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
