{
	"testEnvironment": "node",
	"notify": true,
	"notify-mode": "change",
	"bail": true,
	"transform": {
		"^.+\\.tsx?$": "ts-jest"
	},
	"testMatch": ["**/lib/test/**/*.test.ts"],
	"modulePathIgnorePatterns": [
		"node_modules",
		"samples",
		"docs",
		"dist"
	],
	"moduleFileExtensions": [
		"ts",
		"tsx",
		"js",
		"jsx",
		"json",
		"node"
	]
}